<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:drawable/alert_light_frame">

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView
             android:text="Сделайте фото счетчика"
             android:layout_margin="12dp"
             android:textSize="8pt"
             android:textColor="@color/colorPrimaryDark"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/textView2"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add"
        android:id="@+id/cameraOnclick"/>



        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Серийник :"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/info1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/serionnumber1"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Старые показания : "
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/info"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/oldnumber"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Новые показания : "
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/info3"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Новые показания"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/newpokaznyk"
            android:layout_weight="1"
            android:inputType="number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Дата показаний : "
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/info4"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:onClick="onEditClicked"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/datepokazzz"
            android:hint="Выберите дату"
            android:layout_weight="1"
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:text="Отправить"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendfileontext"
        android:padding="10dp"
        style="@android:style/Widget.Button"/>


</LinearLayout>
